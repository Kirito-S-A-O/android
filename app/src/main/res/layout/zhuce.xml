<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@mipmap/zhuce_foreground"/>



    <EditText
        android:id="@+id/edt_zhuce_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#66ccff"
        android:layout_marginTop="15dp"
        android:hint="@string/User_name"
        android:drawableRight="@drawable/user_name"
        android:drawablePadding="5dp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/edt_zhuce_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#66ccff"
        android:layout_marginTop="15dp"
        android:hint="@string/User_Password"
        android:drawableRight="@drawable/user_password"
        android:drawablePadding="5dp"
        android:maxLines="1"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_zhuce"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="注册"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="20sp"/>



    </LinearLayout>

</LinearLayout>